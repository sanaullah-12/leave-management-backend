# Enhanced Email Configuration for Maximum Deliverability
# Copy these settings to your main .env file and update with your actual values

# =============================================================================
# EMAIL AUTHENTICATION SETTINGS (Critical for deliverability)
# =============================================================================

# Primary sending email (must match your domain)
FROM_EMAIL=noreply@example.com
FROM_NAME=Leave Management System
FROM_DOMAIN=example.com
REPLY_TO_EMAIL=support@example.com

# =============================================================================
# DKIM AUTHENTICATION (Prevents spoofing)
# =============================================================================

# Your domain for DKIM signing
DKIM_DOMAIN=example.com
DKIM_SELECTOR=default

# DKIM private key (generate using: openssl genrsa -out dkim_private.pem 2048)
DKIM_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
MIIEpAIBAAKCAQEA1234567890abcdef...
REPLACE_WITH_YOUR_ACTUAL_PRIVATE_KEY
...
-----END RSA PRIVATE KEY-----"

# =============================================================================
# SMTP CONFIGURATION (Enhanced for Gmail)
# =============================================================================

# Gmail SMTP settings (recommended for development/small scale)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com

# Gmail App Password (16 characters, generate in Google Account settings)
# DO NOT use your regular Gmail password - use App Password only!
SMTP_PASSWORD=abcdabcdabcdabcd

# =============================================================================
# TRANSACTIONAL EMAIL SERVICE (Recommended for production)
# =============================================================================

# SendGrid API Key (best for production deliverability)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Alternative: Mailgun API settings
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.example.com

# Alternative: AWS SES settings
AWS_SES_REGION=us-east-1
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key

# =============================================================================
# EMAIL MONITORING & COMPLIANCE
# =============================================================================

# DMARC reporting emails (where to receive authentication reports)
DMARC_REPORTS_EMAIL=admin@example.com

# Bounce handling email
BOUNCE_HANDLING_EMAIL=bounces@example.com

# Unsubscribe handling
UNSUBSCRIBE_EMAIL=unsubscribe@example.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Frontend URL for email links
FRONTEND_URL=https://your-app.com

# Environment
NODE_ENV=production

# Email rate limiting (emails per minute)
EMAIL_RATE_LIMIT=60

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable email encryption in transit
EMAIL_ENCRYPTION=true

# Email queue settings (for high-volume sending)
EMAIL_QUEUE_ENABLED=true
EMAIL_QUEUE_REDIS_URL=redis://localhost:6379

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to true to see detailed SMTP logs
EMAIL_DEBUG=false

# Test email address (all emails go here in development)
TEST_EMAIL_OVERRIDE=

# Disable actual sending in development (logs only)
EMAIL_DRY_RUN=false